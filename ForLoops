package tutorial;

import java.util.Scanner;

public class ForLoops {

	public static void main(String[] args) {
		
		for(int x=0; x <=10; x++) {
			System.out.println(x);
		}
		
		int[]arr = {1,5,7,3,4,5};
		
		for (int i = 0; i < arr.length; i++) {
			if (arr[i] == 5) {
				System.out.println("Found a 5! at index " + i);
			}
		}
		
	}

}
